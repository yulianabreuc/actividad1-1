doctype html
html
  head
    title Biblioteca Publica
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
      }
      h2 {
        color: #333;
      }
      p {
        color: #000;
        font-size: 2em;
        font-weight: bold;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin: 5px 0;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }
      .disponible {
        background-color: #d4edda;
        border-color: #c3e6cb;
      }
      .no-disponible {
        background-color: #f8d7da;
        border-color: #f5c6cb;
      }
  body
    p Hola!
    if welcomeMessage
      p #{welcomeMessage}
    else
      p Bienvenido a la biblioteca publica

    if books && books.length
      h2 Lista de Libros
      ul
        each book in books
          li(class=book.disponible ? 'disponible' : 'no-disponible') #{book.title} - #{book.author} - #{book.year} - #{book.disponible ? 'Disponible' : 'No Disponible'}
    else
      p No hay libros disponibles